---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Impostor League | Home">
    <Navbar />

    <main class="flex-1 flex flex-col items-center justify-center w-full max-w-md px-6 mx-auto min-h-[90dvh] pb-24">
        
        <div class="mb-10 relative w-full flex flex-col items-center animate-fade-in-up">
            <div class="absolute inset-0 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[160px] h-[160px] bg-cyan-500/20 blur-[70px] rounded-full -z-10"></div>
            
            <h1 class="text-5xl md:text-7xl font-black italic tracking-tight text-center relative z-10 drop-shadow-2xl flex flex-col items-center leading-none select-none">
                <span class="bg-clip-text text-transparent bg-gradient-to-b from-white to-slate-400 pb-2">
                    IMPOSTOR
                </span>
                <span class="text-3xl md:text-4xl not-italic font-medium tracking-[0.3em] text-cyan-400 filter drop-shadow-[0_0_15px_rgba(34,211,238,0.4)] pl-1">
                    LEAGUE
                </span>
            </h1>

            <div class="flex gap-3 mt-6">
                <div class="px-3 py-1.5 rounded-full bg-slate-900/60 border border-white/10 text-[11px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1 backdrop-blur-sm shadow-lg">
                    ⚡ Rápido
                </div>
                <div class="px-3 py-1.5 rounded-full bg-slate-900/60 border border-white/10 text-[11px] font-bold text-gray-400 uppercase tracking-wider flex items-center gap-1 backdrop-blur-sm shadow-lg">
                    ⚽ 100% Fútbol
                </div>
            </div>
        </div>

        <div class="w-full space-y-4 animate-fade-in-up delay-100 relative z-20">
            
            <a href="/game" class="group relative block w-full touch-manipulation">
                <div class="absolute inset-0 bg-cyan-500 rounded-2xl blur-xl opacity-20 group-hover:opacity-40 transition duration-500 group-active:opacity-60"></div>
                
                <div class="relative w-full py-6 bg-gradient-to-br from-slate-900 to-slate-950 border border-cyan-500/30 rounded-2xl shadow-2xl flex flex-col items-center justify-center transform transition-all duration-200 group-hover:scale-[1.02] group-hover:border-cyan-400 group-active:scale-95 overflow-hidden">
                    
                    <div class="absolute inset-0 bg-gradient-to-tr from-cyan-400/10 to-transparent opacity-0 group-hover:opacity-100 transition duration-500"></div>
                    
                    <span class="text-xl font-black uppercase tracking-widest flex items-center gap-3 text-white group-hover:text-cyan-300 transition-colors">
                        <span class="text-2xl group-hover:animate-bounce drop-shadow-lg">⚽</span> 
                        JUGAR LOCAL
                    </span>
                    
                    <div class="mt-2 flex items-center gap-2">
                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                        <p class="text-[10px] text-cyan-200/60 font-bold uppercase tracking-widest">
                            Modo Pasa el celular
                        </p>
                    </div>
                </div>
            </a>

            <div class="w-full py-5 bg-slate-900/20 border border-white/5 rounded-2xl flex items-center justify-center gap-3 opacity-40 grayscale select-none cursor-not-allowed">
                <span class="text-xs font-bold uppercase tracking-widest text-gray-500">Modo Online</span>
                <span class="bg-white/5 text-gray-500 text-[9px] px-1.5 py-0.5 rounded border border-white/5">PRONTO</span>
            </div>
        </div>

    </main>
</Layout>